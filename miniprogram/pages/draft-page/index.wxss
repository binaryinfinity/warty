.view-body {
    width: 100%;
    height: 800px;
    display: flex;
    flex-direction: column;
    align-self: center;
    justify-content: flex-start;
    align-items: center;
    gap: 10px;
}

.view-row-wrapper {
    width: auto;
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 10px;
}

.view-column-wrapper {
    width: auto;
    display: flex;
    flex-direction: column;
}

.view-hr-item-wrapper,
.view-hr-row-wrapper {
    height: 30px;
    width: 98%;
}

.view-hr-row-inline-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    border: 1px solid red;
}

.image-avatar {
    border: 1px pink solid;
    border-radius: 50%;
    width: 56px;
    height: 56px
}

.image-btn {
    color: purple;
    font-size: x-small;
}

.view-form-wrapper {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 6px;
}

.view-item-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
}

.view-inline-hr {
    width: 90%;
    align-self: center;
    padding-bottom: 10px;
}

hr {
    width: 100%;
    border-bottom: .5px solid lightgray;
}

.show-input-border {
    padding-left: 20px;
    border-radius: 10px;
    border: 1px solid rgb(181, 128, 185);
    padding-top: 3%;
    padding-bottom: 3%;
}

.forgot-label {
    font-size: x-small;
    color: #52064b;
}

input {
    padding-left: 5px;
}

.reg-submit-btn {
    width: 100%;
    border-radius: 100px;
    margin: 15px 0;
    background-image: linear-gradient(to right, #d069dd 0%, #52064b 50%, #d069dd 100%);
    box-shadow: 3px 3px 9px rgba(0, 0, 0, 0.3);
    color: #f8f8f8;
}

.reg-submit-btn:active {
    box-shadow: 3px 3px 9px rgba(231, 217, 217, 0.3);
}