page {
    height: 90%;
    background-color: #f8f8f8;
}

.login-container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.btn-login {
    width: 100%;
    border-radius: 100px;
    margin: 15px 0;
    background-image: linear-gradient(to right, #d069dd 0%, #52064b 50%, #d069dd 100%);
    box-shadow: 3px 3px 9px rgba(0, 0, 0, 0.3);
    color: #f8f8f8;
}

.btn-login:active {
    box-shadow: 3px 3px 9px rgba(231, 217, 217, 0.3);
}

hr {
    display: block;
    margin-left: 5%;
    width: 90%;
    border: none;
    border-top: 1px solid lightgray;
    color: #333;
    overflow: visible;
    text-align: center;
    height: 5px;
}

hr::after {
    flex-direction: column;
    align-items: center;
    align-content: center;
    background: #f6f6f6;
    color: lightgray;
    font-size: 10%;
    content: 'Copyright Â© 2024 SX. All Rights Reserved.';
    padding: 0 4px;
    position: relative;
    top: -13px;
}