<view class="view-body">
    <view style="height: 100%; width: 100%; display: flex; flex-direction:column; align-items: center; justify-content:center;" class="view-column">

        <view style="display: flex; flex-direction:row; justify-content:flex-start; align-items:center; width: 100%;height: 10%;" class="view-wrapper">
            <label style="font-size: large; font-family: 'Times New Roman', Times, serif; font-weight: bolder;">{{ question }}</label>
        </view>

        <view style="width: 100%; display: flex; flex-direction:row; justify-content: center; align-items: center;">
            <hr/>
        </view>

        <view style="padding-top: 5%; width: 100%; height: 60%;" class="view-wrapper">
            <textarea style="font-family:'Times New Roman', Times, serif; height: 100%; width:100%; overflow-y: scroll; ">{{ answer }}</textarea>
        </view>

    </view>
</view>